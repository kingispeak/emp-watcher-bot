{
  "name": "emp-watcher-bot",
  "version": "1.0.0",
  "description": "Automated web monitoring and OCR notification bot",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js --env production",
    "reload": "pm2 reload ecosystem.config.js --env production",
    "delete": "pm2 delete ecosystem.config.js",
    "pm2:kill": "pm2 kill",
    "status": "pm2 status",
    "logs": "pm2 logs",
    "clean": "rm -rf ./downloads/*.png ./logs/*.log last_hash.txt",
    "remote-deploy": "ssh xinya 'cd /var/www/emp-watcher-bot && ./deploy.sh'"
  },
  "keywords": [
    "monitoring",
    "ocr",
    "tesseract",
    "telegram",
    "line"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.3",
    "node-cron": "^4.2.1",
    "pm2": "^6.0.14",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
